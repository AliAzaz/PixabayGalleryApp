<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.fragment.ImageDetailFragment">

    <data>

        <import type="android.view.View" />

        <variable
            name="selImageItem"
            type="com.example.pixabaygalleryapp.model.ImagesInfo" />

        <variable
            name="imageViewModel"
            type="com.example.pixabaygalleryapp.viewmodel.IImageViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/main_background"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/productImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/_2sdp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:loadGroupImage="@{imageViewModel.selectedImage().largeImageURL}"
            tools:src="@drawable/loading" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>